{
  "name": "hoppscotch",
  "version": "2.0.0",
  "description": "Open source API development ecosystem",
  "author": "liyasthomas",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate --modern",
    "pretty-quick": "pretty-quick --staged --pattern \"**/*.*(html|js|json|vue)\"",
    "test": "jest",
    "postinstall": "husky install"
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": false,
    "printWidth": 100
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.13.1",
    "@nuxtjs/gtm": "^2.4.0",
    "@nuxtjs/robots": "^2.5.0",
    "@nuxtjs/sitemap": "^2.4.0",
    "@nuxtjs/toast": "^3.3.1",
    "ace-builds": "^1.4.12",
    "acorn": "^8.1.0",
    "acorn-walk": "^8.0.2",
    "esprima": "^4.0.1",
    "firebase": "^8.3.1",
    "graphql": "^15.5.0",
    "graphql-language-service-interface": "^2.8.2",
    "lodash": "^4.17.20",
    "mustache": "^4.1.0",
    "nuxt": "^2.15.3",
    "nuxt-i18n": "^6.21.1",
    "paho-mqtt": "^1.1.0",
    "rxjs": "^6.6.3",
    "socket.io-client": "^4.0.0",
    "socketio-wildcard": "^2.0.0",
    "tern": "^0.24.3",
    "v-tooltip": "^2.1.3",
    "vue-rx": "^6.2.0",
    "vuejs-auto-complete": "^0.9.0",
    "vuex-persist": "^3.1.3",
    "yargs-parser": "^20.2.7"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/plugin-proposal-class-properties": "^7.12.13",
    "@babel/preset-env": "^7.13.10",
    "@nuxt/types": "^2.15.3",
    "@nuxt/typescript-build": "^2.1.0",
    "@nuxtjs/color-mode": "^2.0.5",
    "@nuxtjs/google-analytics": "^2.4.0",
    "@nuxtjs/google-fonts": "^1.3.0",
    "@nuxtjs/pwa": "^3.3.5",
    "@nuxtjs/tailwindcss": "^4.0.2",
    "@testing-library/jest-dom": "^5.11.9",
    "@types/lodash": "^4.14.168",
    "@vue/test-utils": "^1.1.3",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.22.0",
    "eslint-plugin-vue": "^7.7.0",
    "husky": "^5.2.0",
    "jest": "^26.6.3",
    "jest-serializer-vue": "^2.0.2",
    "postcss": "^8.2.8",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "raw-loader": "^4.0.2",
    "sass": "^1.32.8",
    "sass-loader": "^10.1.1",
    "ts-jest": "^26.5.4",
    "vue-jest": "^3.0.7",
    "worker-loader": "^3.0.8"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "vue"
    ],
    "watchman": false,
    "moduleNameMapper": {
      ".+\\.(svg)\\?inline$": "<rootDir>/__mocks__/svgMock.js",
      "^~/(.*)$": "<rootDir>/$1",
      "^~~/(.*)$": "<rootDir>/$1"
    },
    "transform": {
      "^.+\\.js$": "babel-jest",
      ".*\\.(vue)$": "vue-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "snapshotSerializers": [
      "jest-serializer-vue"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/components/**/*.vue",
      "<rootDir>/pages/*.vue"
    ],
    "testURL": "http://localhost/",
    "preset": "ts-jest/presets/js-with-babel"
  }
}
